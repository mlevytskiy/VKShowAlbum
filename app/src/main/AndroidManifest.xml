<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vkshowalbum.mlevytskiy.com.vkshowalbum" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".App">
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ConcreteAlbumActivity" />

        <activity android:name=".PhotoActivity" />

        <activity android:name="com.vk.sdk.VKOpenAuthActivity" />

        <activity android:name="com.vk.sdk.VKServiceActivity"
                  android:label="ServiceActivity" android:theme="@style/VK.Transparent" />

    </application>

</manifest>
